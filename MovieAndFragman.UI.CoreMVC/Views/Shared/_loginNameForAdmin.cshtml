
@model AccountVM

@if (!string.IsNullOrEmpty(Model.UserRole))
{
    if (Model.UserRole == "User")
    {        
        <a asp-controller="home" asp-action="index" class="button-account"><i class="lni lni-user"></i> @Model.UserName </a>
        <a asp-controller="account" asp-action="Logout" class="button-account mt-2"><i class="lni lni-user"></i> Logout </a>
    }
    else if (Model.UserRole == "Admin")
    {
        <a asp-area="admin" asp-controller="home" asp-action="index" class="button-account"><i class="lni lni-user"></i> @Model.UserName </a>
        <a asp-controller="account" asp-action="Logout" class="button-account mt-2"><i class="lni lni-user"></i> Logout </a>
    }
}
else
{
    <a asp-controller="account" asp-action="login" class="button-account"><i class="lni lni-user"></i> LOGIN </a>
    <a asp-controller="account" asp-action="register" class="button-account mt-2"><i class="lni lni-user"></i> REGISTER </a>
}