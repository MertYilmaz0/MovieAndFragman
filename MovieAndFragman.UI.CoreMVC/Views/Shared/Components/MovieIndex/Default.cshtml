@model List<GenreVM>

@{
    int i = 0;
    string color = string.Empty;
}

@if (Model.Count > 0)
{
    @foreach (GenreVM item in Model)
    {
        @if (i % 2 == 0)
        {
            color = "#f9f5f7";  //TODO: RENK >>> Kategori renkleri
            i++;
        }
        else
        {
            color = "#fff";
            i++;
        }
        
        <section class="content-section" data-background="@color" id="@item.GenreId">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h2>@item.Name</h2>
                        </div>
                        <!-- end section-title -->
                    </div>
                    @await Component.InvokeAsync("MoviesByG", item.GenreId)
                    <!-- end col-12 -->

                </div>
            </div>
            <!-- end container -->
        </section>
    }
}