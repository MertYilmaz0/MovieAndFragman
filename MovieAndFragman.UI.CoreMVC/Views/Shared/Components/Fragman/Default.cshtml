@model List<FragmanVM>

<section class="content-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h6>ONLINE STREAMING</h6>
                    <h2>Watch Shows Online</h2>
                </div>
                <!-- end section-title -->
            </div>
            <!-- end col-12 -->

            @foreach (FragmanVM item in Model)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="category-thumb">
                        <figure class="category-image"> <img src="@item.MediumPoster" alt="Image"> </figure>
                        <div class="category-content">
                            <ul class="tags">
                                @await Component.InvokeAsync("SingleGenre", item.FragID)
                            </ul>
                            <h3 class="name">@item.Name</h3>
                            <div class="play-btn"><a asp-controller="Movie" asp-action="MovieSinglePage" asp-route-id="@item.FragID">+</a></div>
                        </div>
                        <!-- end category-content -->
                    </div>
                    <!-- end category-thumb -->
                </div>
                <!-- end col-3 -->
            }

        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</section>
<!-- end content-section -->