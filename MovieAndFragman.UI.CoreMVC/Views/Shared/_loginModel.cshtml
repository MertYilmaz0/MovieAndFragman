

@model AccountVM

@if (!string.IsNullOrEmpty(Model.UserRole))
{
    if (Model.UserRole == "User")
    {
        <div class="navbar-account"> <a asp-controller="account" asp-action="Logout">Logout</a>/<a asp-controller="home" asp-action="index">@Model.UserName</a><i class="lni lni-user"></i></div>
    }
    else if (Model.UserRole == "Admin")
    {
        <div class="navbar-account"> <a asp-controller="account" asp-action="Logout">Logout</a>/<a asp-area="admin" asp-controller="home" asp-action="index">@Model.UserName</a><i class="lni lni-user"></i></div>
    }
}
else
{

    <div class="navbar-account"> <a asp-controller="account" asp-action="register">Register</a>/<a asp-controller="account" asp-action="login">Login</a><i class="lni lni-user"></i></div>
}