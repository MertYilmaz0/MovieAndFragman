@model List<FragmanVM>


@foreach (FragmanVM item in Model)
{
    <!-- end col-2 -->
    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-6">
        <div class="video-thumb">
            <figure class="video-image">
                <a href="#"><img src="@item.Poster" alt="Image"></a> 
            </figure>
            <div class="video-content">                
                <ul class="tags">
                    @await Component.InvokeAsync("SingleGenre", item.FragID)
                </ul>
                
                <h3 class="name"><a  asp-controller="Movie" asp-action="MovieSinglePage" asp-route-id="@item.FragID">@item.Name</a></h3>
            </div>
            <!-- end video-content -->
        </div>
        <!-- end video-thumb -->
    </div> <!-- end col-2 -->
}