
@{
    ViewData["Title"] = "Live";
}

<header class="page-header single" data-background="images/movie-poster-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="video-player">
                    <a href="javascript:history.go(-1)" class="back-btn"><i class="lni lni-chevron-left"></i> BACK</a>
                    <iframe id="liveVideo" style="width:100%;height:35vw" src="https://www.youtube.com/embed/9UUecf02o_Q" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
                <!-- end video-player -->
            </div>
            <!-- end col-12 -->
        </div>
        <!-- end col-12 -->
        <!-- end row -->
    </div>
    <!-- end container -->
</header>

<main>
    <section class="content-section" data-background="#111111">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title light">
                        <h6>FIND ANYWHERE ELSE</h6>
                        <h2>Live</h2>
                    </div>
                    <!-- end section-title -->
                </div>
                <!-- end col-12 -->
               <div class="row" id="liveList"></div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </section>
    <!-- end content-section -->
</main>

@section scripts{
    <script>
        function ChangeUrl(path) {
            if (path != 0) {
                $("#liveVideo").attr("src", path)
            }
        }

        $.ajax({
            type: "get",
            url: "../../../ajax/LiveGetAll",
            success: function (response) {
                $("#liveList").html(response)
            }
        })
        $.ajax({
            type: "get",
            url: "../../../ajax/GetBroadcast",
            success: function (response) {
                $("#liveVideo").attr("src", response.bPath)
            }
        })
    </script>
}


