
@{
    ViewData["Title"] = "Movies";
}

<header class="page-header">
    <div class="container">
        <h1>Movies</h1>
    </div>
</header>
<!-- end page-header -->
<main>
    <div class="row">
        <div class="col-lg-9" id="categoryPanel">                      
            @await Component.InvokeAsync("MovieIndex")
        </div>
        <!-- end content-section -->
        <div class="col-lg-3">
            <aside class="sidebar">                
                <!-- end widget -->
                <div class="widget">
                    <h6 class="widget-title">CATEGORIES</h6>

                    @await Component.InvokeAsync("Categories")

                </div>
                <!-- end widget -->
            </aside>
            <!-- end sidebar -->
        </div>
        <!-- end col-4 -->
    </div>


</main>

@section scripts{
    <script>
        $(document).ready(function () {
            GetFragmanListAll()
            GetBtnMyList("../../mylist/getbtn")
        })

    </script>
}